<Window x:Class="Library.View.BaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View"
        mc:Ignorable="d"
        Title="BaseWindow" Height="450" Width="800">

    <TabControl>
        <TabItem>
            <TabItem.Header>Пошук Клієнта</TabItem.Header>
            <TabItem.Content>
                <Grid ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row ="0" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <ComboBox SelectedIndex="0" Grid.Column="0" HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  Margin="5 5 5 5">
                            <TextBlock>за номером читацького квитка</TextBlock>
                            <TextBlock>за ПІБ</TextBlock>
                        </ComboBox>

                        <TextBox Grid.Column="1" Margin="5 5 5 5"></TextBox>

                        <Button Grid.Column="2">Пошук Клієнта</Button>

                    </Grid>

                    <Grid Grid.Row="1" ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" TextAlignment="Center">Результати пошуку клієнта</TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="1" TextAlignment="Center">Книги обраного клієнта</TextBlock>

                        <ListBox Grid.Row="1" Grid.Column="0"></ListBox>
                        <ListBox Grid.Row="1" Grid.Column="1"></ListBox>

                    </Grid>
                </Grid>
            </TabItem.Content>
        </TabItem>
        <TabItem>
            <TabItem.Header>Пошук Книги</TabItem.Header>
            <TabItem.Content>
                <Grid ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row ="0" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <ComboBox SelectedIndex="0" Grid.Column="0" HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  Margin="5 5 5 5">
                            <TextBlock>за бібліотечним номером</TextBlock>
                            <TextBlock>за назвою</TextBlock>
                            <TextBlock>за автором</TextBlock>
                        </ComboBox>

                        <TextBox Name="TextBoxBookSearch" Grid.Column="1" Margin="5 5 5 5"></TextBox>

                        <Button Grid.Column="2">Пошук Книги</Button>

                    </Grid>

                    <Grid Grid.Row="1" ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" TextAlignment="Center">Результати пошуку книги</TextBlock>

                        <ListBox Grid.Row="1" Margin="20 5 20 10"></ListBox>

                    </Grid>
                </Grid>
            </TabItem.Content>
        </TabItem>

    </TabControl>
</Window>
